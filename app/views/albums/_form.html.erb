<% action_url = (action == :new) ? albums_url : album_url %>

<form action="<%= action_url %>" method="post">
	<% if action == :edit %>
		<input type="hidden" name="_method" value="put" />
	<% end %>

	<label for="album_name">Album</label>
		<input type="text" name="album[name]" id="album_name" value="<%= album.name %>">
	<br>
	<label for="album_band_id">Band</label>
	  <select name="album[band_id]" id="album_band_id">
			<% @bands.each do |band| %>
			  <option value="<%=band.id %>"
					<%= 'selected' if @album.band_id == band.id %>><%=band.name %>
				</option>
			<% end %>
		</select>
	<br>

	<input type="radio" name="album[album_type]" id="album_types" value="Studio" <%= 'checked' if @album.album_type == 'Studio' %> >
	<label for="album_types">Studio Album</label>
	<br>
	<input type="radio" name="album[album_type]" id="album_typel" value="Live" <%= 'checked' if @album.album_type == 'Live' %>>
	<label for="album_typel">Live Album</label>
	<br>
	<input type="submit" value="Submit">
</form>